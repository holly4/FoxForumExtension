{
	"manifest_version": 2,
	"minimum_chrome_version": "22.0.0.0",
	"name": "Fox Forum Helper",
	"description": "Add function (and Fun!) to the Fox News Forum.",
	"version": "2.3.3",

	"icons": {
		"128": "images/icon.png"
	},

	"page_action": {
		"default_icon": "images/icon.png",
		"default_title": "Fox Forum Helper",
		"default_popup": "pop-up/popup.html"
	},

	"background": {
		"scripts": [
			"shared/jquery-1.12.3.slim.min.js",
			"shared/globals.js",
			"event-page/settings.js",
			"event-page/event-page.js"
		],
		"persistent": false
	},

	"content_scripts": [{
		"matches": ["*://*.foxnews.com/*"],
		"js": [
			"shared/jquery-1.12.3.slim.min.js",
			"shared/globals.js",
			"content-scripts/listener.js",
			"content-scripts/Module_Borderizer.js",
			"content-scripts/Module_CommentObserver.js",
			"content-scripts/Module_CleanComments.js",
			"content-scripts/Module_CleanPage.js",
			"content-scripts/Module_DisableScrolling.js",
			"content-scripts/Module_FilterUsers.js",
			"content-scripts/Module_ShowFilteredComments.js",
			"content-scripts/Module_ShowLikerAvatars.js",
			"content-scripts/Module_XhrInterceptor.js"
		]
	}],

	"options_ui": {
		"page": "options-page/options.html",
		"chrome_style": true
	},

	"permissions": [
		"activeTab",
		"storage",
		"http://foxnews.com/*"
	],

	"web_accessible_resources": [
		"content-scripts/disable-scrolling.js",
		"content-scripts/xhr-interceptor.js"
	]
}