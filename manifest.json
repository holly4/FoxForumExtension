{
	"manifest_version":2,
	"minimum_chrome_version" : "22.0.0.0",
	"name":"Fox Forum Helper",
	"description":"Add function (and Fun!) to the Fox News Forum.",
	"version":"1.0.0",

	"page_action": {
		"default_icon":"images/icon.png",
		"default_title":"Fox Forum Helper",
		"default_popup":"popup.html"
	},

	"background":{
		"scripts":["eventPage.js"],
		"persistent":false
	},

	"content_scripts":[
		{
			"matches":["http://www.foxnews.com/*"],
			"js":[
				"listener.js",
				"jquery-1.12.3.slim.min.js",
				"Module_CleanPage.js",
				"Module_DisableScrolling.js",
				"Module_FilterUsers.js",
				"Module_ShowFilteredComments.js",
				"Module_ShowLikerAvatars.js",
				"Module_CommentObserver.js"
				]
		}
	],

	"permissions":[
		"activeTab",
		"storage",
		"http://foxnews.com/*"
	]	
}